<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, minimum-scale=1.0, initial-scale=1.0, user-scalable=yes">
  <title>country-selector</title>

  <script src="../../platform/platform.js"></script>
  <script src="../../web-component-tester/browser.js"></script>

  <!-- Step 1: import the element to test -->
  <link rel="import" href="../country-selector.html">
</head>
<body>

  <!-- You use the document as a place to set up your fixtures. -->
  <country-selector></country-selector>

  <script>
    var myEl = document.querySelector('country-selector');

    suite('<country-selector>', function() {

      test('defines the "author" property', function() {
        assert.equal(myEl.author, 'Dimitri Glazkov');
      });

      test('says hello', function() {
        assert.equal(myEl.sayHello(), 'country-selector says, Hello World!');

        var greetings = myEl.sayHello('greetings Earthlings');
        assert.equal(greetings, 'country-selector says, greetings Earthlings');
      });

      test('fires lasers', function(done) {
        myEl.addEventListener('country-selector-lasers-success', function(event) {
          assert.equal(event.detail.sound, 'Pew pew pew!');
          done();
        });
        myEl.fireLasers();
      });

    });
  </script>

</body>
</html>
